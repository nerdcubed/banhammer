version: '3'
services:
  redis:
    image: redis:alpine
    command: redis-server --appendonly yes
    restart: always
    networks:
      - internal
    volumes:
      - ./db:/data
  banhammer:
    image: registry.gitlab.com/nerd3-servers/banhammer-generator:latest
    build: '.'
    restart: always
    networks:
     - internal
    depends_on:
     - redis
    env_file:
     - generator.env
networks:
  internal:
